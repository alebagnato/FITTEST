<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>eu.fittest.eclipse</groupId>
		<artifactId>eu.fittest.eclipse.parent</artifactId>
		<version>1.0.2</version>
	</parent>

	<artifactId>eu.fittest.eclipse.gui</artifactId>
	<version>1.8.1-SNAPSHOT</version>
	<packaging>eclipse-plugin</packaging>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.4.1</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>www</directory>
						</fileset>
						<fileset>
							<directory>lib</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>process-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>eu.fittest</groupId>
									<artifactId>eu.fittest.agent.sut.ui</artifactId>
									<classifier>with-dependencies</classifier>
									<version>1.0.1-SNAPSHOT</version>
									<type>zip</type>
									<overWrite>true</overWrite>
									<outputDirectory>www</outputDirectory>
								</artifactItem>
							</artifactItems>
							<stripVersion>true</stripVersion>
							<outputDirectory>import</outputDirectory>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					<execution>
						<id>copy</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>net.sourceforge</groupId>
									<artifactId>netx</artifactId>
									<version>0.5</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>www/tools</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>eu.fittest.upvlc</groupId>
									<artifactId>eu.fittest.phplogger</artifactId>
									<version>1.0.1-SNAPSHOT</version>
									<classifier>src</classifier>
									<type>zip</type>
									<overWrite>true</overWrite>
									<outputDirectory>www/tools</outputDirectory>
									<destFileName>phplogger.zip</destFileName>
								</artifactItem>

							</artifactItems>
							<stripVersion>true</stripVersion>
							<outputDirectory>import</outputDirectory>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2.1</version>
				<configuration>
					<descriptors>
						<descriptor>assemblies/assembly.xml</descriptor>
					</descriptors>
					<outputDirectory>${basedir}</outputDirectory>
					<finalName>lib</finalName>
					<appendAssemblyId>false</appendAssemblyId>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>process-resources</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>eu.fittest</groupId>
			<artifactId>eu.fittest.agent.ite</artifactId>
			<version>1.0.2</version>
		</dependency>
		<dependency>
			<groupId>eu.fittest</groupId>
			<artifactId>eu.fittest.component.junit.ite.services</artifactId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<groupId>eu.fittest</groupId>
			<artifactId>eu.fittest.agent.sut.ui</artifactId>
			<version>1.0.1-SNAPSHOT</version>
		</dependency>
	</dependencies>
</project>